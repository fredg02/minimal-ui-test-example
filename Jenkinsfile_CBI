pipeline {
  agent {
      kubernetes {
        label 'ubuntu-22.04'
        yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: ubuntu
    image: fr3d/ubuntu-22.04:0.0.1
    command:
    - cat
    tty: true
    resources:
      limits:
        memory: "2Gi"
        cpu: "1"
      requests:
        memory: "2Gi"
        cpu: "1"
    volumeMounts:
    - name: tools
      mountPath: /opt/tools
  imagePullPolicy: Always
  volumes:
  - name: tools
    persistentVolumeClaim:
      claimName: tools-claim-jiro-cbi
"""
    }
  }
  tools {
    maven 'apache-maven-latest'
    jdk 'oracle-jdk8-latest'
  }
  stages {
    stage('Build') {
      steps {
        container('ubuntu') {
          wrap([$class: 'Xvnc', takeScreenshot: false, useXauthority: true]) {
            sh 'metacity --sm-disable --replace 2> metacity.err &'
            sh 'mvn clean verify -B -f foo.bar.swtbot-parent/pom.xml -Dmaven.test.failure.ignore'
          }
        }
      }
      post {
        always {
          archiveArtifacts artifacts: '**/screenshots/*.jpeg', fingerprint: false
          junit '**/target/surefire-reports/*.xml'
        }
      }
    }
  }
}
